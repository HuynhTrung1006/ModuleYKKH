@model YKKH_Module.Models.KHACHHANG

@{
    Layout = null;
    string a = "@";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Thông tin khách hàng</title>
    <link href="~/css/bootstrap.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/jquery-3.6.0.min.js"></script>
    
</head>
<body>
    @using (Html.BeginForm("checkKH","Home",FormMethod.Post)) 
    {
        @Html.AntiForgeryToken()
        
        <div class="form-horizontal">
            <h4>Thông Tin</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.maKH, htmlAttributes: new { @class = "control-label col-md-2" })
                
                <div class="col-md-8">
                    @Html.EditorFor(model => model.maKH, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.maKH, "", new { @class = "text-danger" })
                </div>
            </div>
    
            <div class="form-group">
                @Html.LabelFor(model => model.tenKH, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-8">
                    @Html.EditorFor(model => model.tenKH, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.tenKH, "", new { @class = "text-danger" })
                </div>
            </div>
    
            <div class="form-group">
                @Html.LabelFor(model => model.emailKH, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-8">
                    @*@Html.EditorFor(model => model.emailKH, new { htmlAttributes = new { @class = "form-control",
                   @onchange = "formValidate()" } })*@
                    <input type="text" name="emailKH" class="form-control"  />
                    @Html.ValidationMessageFor(model => model.emailKH, "", new { @class = "text-danger" })
                </div>
            </div>
    
            <div class="form-group">
                @Html.LabelFor(model => model.dienthoaiKH, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-8">
                    @Html.EditorFor(model => model.dienthoaiKH, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.dienthoaiKH, "", new { @class = "text-danger" })
                </div>
            </div>
            
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input hidden value="@ViewBag.maCD" name="maCD" />
                    <input type="submit" value="Bắt đầu" class="btn btn-default" />
                </div>
            </div>
        </div>
    }
    
    
</body>
</html>
